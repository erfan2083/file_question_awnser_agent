# backend/.env

# --- Django Settings ---
# You can leave these as-is for local development
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,frontend

# --- Database ---
# These are read by docker-compose.yml to create the database
POSTGRES_DB=docqa_db
POSTGRES_USER=docqa_user
POSTGRES_PASSWORD=docqa_password

# --- Django Internal DB Connection ---
# These tell the backend service how to find the 'db' service
DB_NAME=docqa_db
DB_USER=docqa_user
DB_PASSWORD=docqa_password
DB_HOST=db
DB_PORT=5432

# --- Redis / Celery ---
# These tell the backend and worker how to find the 'redis' service
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

